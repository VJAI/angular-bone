{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "bone": {
      "root": "lib",
      "sourceRoot": "lib",
      "projectType": "library",
      "prefix": "bon",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/bone/tsconfig.lib.json",
            "project": "projects/bone/ng-package.json"
          },
          "configurations": {
            "production": {
              "project": "projects/bone/ng-package.prod.json"
            }
          }
        }
      }
    },
    "angular-bone": {
      "root": "",
      "sourceRoot": "demo",
      "projectType": "application",
      "prefix": "demo",
      "schematics": {
        "@schematics/angular:component": {
          "styleext": "scss",
          "spec": false
        },
        "@schematics/angular:class": {
          "spec": false
        },
        "@schematics/angular:directive": {
          "spec": false
        },
        "@schematics/angular:guard": {
          "spec": false
        },
        "@schematics/angular:module": {
          "spec": false
        },
        "@schematics/angular:pipe": {
          "spec": false
        },
        "@schematics/angular:service": {
          "spec": false
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/angular-bone",
            "index": "demo/index.html",
            "main": "demo/main.ts",
            "tsConfig": "demo/tsconfig.json",
            "styles": [
              "demo/styles.scss"
            ]
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "angular-bone:build"
          }
        }
      }
    }
  },
  "defaultProject": "angular-bone"
}
